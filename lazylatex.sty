% InLine Markup
\newtcbox{\lib}[1][]{
	on line,
	arc=1.5pt,
%	height=20pt,
%	valign=center,
	fontupper=\sffamily,
	boxsep=0pt,
	before upper={\rule[-3pt]{0pt}{10pt}},
	left=12pt,right=2pt,top=2pt,bottom=0pt,
	boxrule=0.7pt,
	colback=colLibBody,
	colframe=colLibFrame,
	coltext=Z0,
	enhanced,overlay={
	\begin{tcbclipinterior}
		\sffamily;
	    \fill[colLibHead] (frame.south west) rectangle ([xshift=10pt]frame.north west);
	    \draw[Z99] (frame.south west) node[xshift=5pt,yshift=7.5pt,transform shape,rotate=90,scale=0.5] {\textbf{LIB}};
	\end{tcbclipinterior}
	},
}
\newtcbox{\fname}[1][]{
	on line,
	fontupper=\itshape,
	arc=0pt,
	outer arc=0pt,
	boxsep=0pt,
	before upper={\rule[-3pt]{0pt}{10pt}},
	left=4pt,right=4pt,top=2pt,bottom=2pt,
	boxrule=0.7pt,
	colback=Z99,
	colframe=colFnameFrame,
